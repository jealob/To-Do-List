<div class="container wrapper">
    <section>
        <div class="row">
            <div class="text-center my-2 mx-auto">
                <h1>To-Do List!</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 py-3 mb-2 ml-0 mx-auto rounded uncomplete">
                <h2 class="text-center">Uncompleted Task!</h2>

                <p>
                    {{#each tasks}} {{#unless complete}} {{> tasks/task-block complete=true}} {{/unless}} {{/each}}
                </p>
            </div>
            <div class=" col-lg-5 col-md-12 col-sm-12 col-xs-12 py-3 mb-2 ml-5 mx-auto rounded complete">
                <h2 class="text-center">Completed Task!</h2>

                <p>
                    {{#each tasks}} {{#if complete}} {{> tasks/task-block complete=false}} {{/if}} {{/each}}
                </p>
            </div>
        </div>
        <div class="row add-task rounded mb-3">
            <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 py-3 mb-2 mx-auto text-center my-2 mx-auto">
                <h2>Add a Task</h2>
                <form class="create-form">

                    <div class="form-group">
                        <label for="ca">Task:</label>
                        <input type="text" id="ca" name="task">
                    </div>

                    <div class="form-group">
                        <label for="complete">Complete?</label>
                        <br>
                        <input type="radio" name="complete" value="1"> Completed!
                        <br>
                        <input type="radio" name="complete" value="0" checked> Yet to Complete!
                    </div>

                    <button type="submit" class="rounded">Add Task</button>
                </form>
            </div>
        </div>
    </section>
</div>

<footer class="footer text-center py-1">
    &copy; 2018
</footer>