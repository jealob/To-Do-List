<h1>tasks!</h1>

<h2>Uncompleted Task!</h2>

<ul>
  {{#each tasks}}
    {{#unless complete}}
      {{> tasks/task-block complete=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Completed Task!</h2>

<ul>
  {{#each tasks}}
    {{#if complete}}
      {{> tasks/task-block complete=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Task</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Tasks:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="complete">Complete?</label><br>
    <input type="radio" name="complete" value="1" checked> Complete!<br>
    <input type="radio" name="complete" value="0"> Yet to Complete
  </div>

  <button type="submit">Add Cat</button>
</form>
