<div class="container-fluid border">
    <section>
        <div class="row">
            <div class="text-center my-2 mx-auto">
                <h1>To-Do List!</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 py-3 text-center my-2 mx-auto border">
                <h2>Uncompleted Task!</h2>

                <ul>
                    {{#each tasks}} {{#unless complete}} {{> tasks/task-block complete=true}} {{/unless}} {{/each}}
                </ul>
            </div>
            <div class=" col-lg-6 col-md-6 col-sm-12 col-xs-12 py-3 text-center my-2 mx-auto border">
                <h2>Completed Task!</h2>

                <ul>
                    {{#each tasks}} {{#if complete}} {{> tasks/task-block complete=false}} {{/if}} {{/each}}
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="text-center my-2 mx-auto">
                <h2>Add a Task</h2>
                <form class="create-form">

                    <div class="form-group">
                        <label for="ca">Tasks:</label>
                        <input type="text" id="ca" name="task">
                    </div>

                    <div class="form-group">
                        <label for="complete">Complete?</label>
                        <br>
                        <input type="radio" name="complete" value="1"> Completed!
                        <br>
                        <input type="radio" name="complete" value="0" checked> Yet to Complete
                    </div>

                    <button type="submit">Add Task</button>
                </form>
            </div>
        </div>
    </section>
</div>